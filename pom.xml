name: CI/CD - Build → Sonar → Nexus → Tomcat

on:
  push:
    branches: [dev, test, pre-prod, master]
  workflow_dispatch:

jobs:
  build-and-scan:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      # ✅ Match Java version from pom.xml
      - uses: actions/setup-java@v4
        with:
          distribution: 'temurin'
          java-version: '8'

      # ✅ Build WAR file
      - run: mvn -B clean package

      # Optional: Verify WAR exists
      - run: ls -lh target

      # ✅ SonarQube code scan
      - run: mvn -B sonar:sonar \
          -Dsonar.host.url=${{ secrets.SONAR_HOST_URL }} \
          -Dsonar.login=${{ secrets.SONAR_TOKEN }}

      # ✅ Upload WAR artifact for later jobs
      - uses: actions/upload-artifact@v4
        with:
          name: app-war
          path: target/*.war

  publish-to-nexus:
    needs: build-and-scan
    runs-on: ubuntu-latest
    steps:
      - uses: actions/download-artifact@v4
        with:
          name: app-war
          path: target

      # Check that WAR was downloaded
      - run: ls -lh target

      # ✅ Deploy WAR to Nexus
      - run: |
          VERSION=1.0.${{ github.run_number }}
          mvn deploy:deploy-file \
            -Durl=${{ secrets.NEXUS_URL }} \
            -DrepositoryId=nexus \
            -Dfile=target/*.war \
            -DgroupId=com.example \
            -DartifactId=myapp \
            -Dversion=$VERSION \
            -Dpackaging=war \
            -DgeneratePom=true

  deploy-to-tomcat:
    needs: publish-to-nexus
    runs-on: ubuntu-latest
    steps:
      - uses: actions/download-artifact@v4
        with:
          name: app-war
          path: target

      # ✅ Deploy WAR to Tomcat Manager
      - run: |
          curl -u ${{ secrets.TOMCAT_USERNAME }}:${{ secrets.TOMCAT_PASSWORD }} \
            -T target/*.war \
            "${{ secrets.TOMCAT_URL }}/manager/text/deploy?path=/myapp&update=true"

  deploy-to-snyk:
    needs: build-and-scan
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-java@v4
        with:
          distribution: 'temurin'
          java-version: '8'

      # ✅ Run Snyk vulnerability scan (non-blocking)
      - name: Run Snyk to check for vulnerabilities
        uses: snyk/actions/maven@master
        continue-on-error: true
        env:
          SNYK_TOKEN: ${{ secrets.SNYK_TOKEN }}
